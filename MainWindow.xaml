<Window x:Class="u1_02_AidenJrOutput.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u1_02_AidenJrOutput"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Label x:Name="lblTitle"
            Content=" Enter your name"
            HorizontalAlignment="Center"
            />


            <TextBox x:Name="entryName"  Height="30" TextWrapping="Wrap" Text="TextBox"
                     FontSize="18"
                     FontStyle="Normal"
                    />
            <Label x:Name="lbloutput"
                   Content="I Will Say Hello "
                   HorizontalAlignment="Center"/>
            <Button Content="Greetings"
                    x:Name="btngreeting"
                    Height="74"
                    Width="150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Click="btngreeting_Click" RenderTransformOrigin="0.939,0.706" Margin="184,0,183,0"/>
            
        </StackPanel>
    </Grid>
</Window>
